<h1>All Categories</h1>
@if(@Model.Count == 0)
{
  <h3>You have not added any Categories</h3>
}
@foreach(var category in Model)
{
  <ul>
    <li><a href="/category/@category.GetId()">@category.GetName()</a> | <a href="/category/edit/@category.GetId()">Edit</a> | <a href="/category/delete/@category.GetId()">Delete</a></li>
  </ul>
}
<p><a href="/category/new">Add a new Category</a></p>
<p><a href="/">Return Home</a></p>
